{
  "manifest_version": 3,
  "name": "SaveIt",
  "version": "0.1",
  "description": "Select text and send it to KnowIt server.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["saveit.js"]
    }
  ],
  "action": {
    "default_popup": "about.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "commands": {
    "open-saveIt-modal": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      },
      "description": "Open SaveIt input with selected text"
    }
  }
}
